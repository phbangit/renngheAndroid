<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow>
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="230dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextViewSubjectTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên Dự Án"
                    android:textColor="#000000"
                    android:textSize="20sp"></TextView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="Số Căn : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/TextViewCredits"
                        android:textSize="16sp"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:src="@drawable/ic_baseline_subject_24"
                android:id="@+id/subjecinformation"
                android:layout_marginTop="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageButton>
            <ImageButton
                android:src="@drawable/ic_baseline_update_24"
                android:id="@+id/subjecupdate"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageButton>

            <ImageButton
                android:id="@+id/subjectdelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_delete_24"></ImageButton>
        </TableRow>
    </TableLayout>

</LinearLayout>