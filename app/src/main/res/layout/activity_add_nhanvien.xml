<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddDuan"
    android:background="@drawable/bg_information">

    <TextView
        android:layout_marginTop="80dp"
        android:textColor="@color/front"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:text="Thêm Nhân Viên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/EditTextStudentName"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/front"
        android:hint="Tên Nhân Viên"
        android:drawableLeft="@drawable/icon_nhanvien"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_custom"></EditText>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Giới Tính : "
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:paddingTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/edittext_custom">
        <RadioButton
            android:checked="true"
            android:textColor="#000000"
            android:id="@+id/radiobuttonMale"
            android:text="Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
        <RadioButton
            android:textColor="#000000"
            android:id="@+id/radiobuttonFemale"
            android:layout_marginLeft="100dp"
            android:text="Nữ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>

    <EditText
        android:id="@+id/EditTextSudentCode"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/front"
        android:background="@drawable/edittext_custom"
        android:drawableLeft="@drawable/icon_manhanvien"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:hint="Mã Nhân Viên"></EditText>

    <EditText
        android:inputType="datetime"
        android:drawableLeft="@drawable/icon_date"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:id="@+id/EditTextDateOfBirth"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/front"
        android:hint="Ngày Sinh"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_custom"></EditText>

    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button"
        android:text="Thêm"
        android:textColor="@color/text_dialog"></Button>


</LinearLayout>