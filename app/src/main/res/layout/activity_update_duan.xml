<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAddDuan"
    android:background="@drawable/bg_information">

    <TextView
        android:layout_marginTop="80dp"
        android:textColor="@color/front"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:text="Cập Nhật Dự Án"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/EditTextUpdateSubjectTitle"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/front"
        android:background="@drawable/edittext_custom"
        android:hint="Tên Dự Án"
        android:drawableLeft="@drawable/duan"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:inputType="number"
        android:background="@drawable/edittext_custom"
        android:id="@+id/EditTextUpdateCredits"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Số Căn"
        android:textColor="@color/front"
        android:drawableLeft="@drawable/building"
        android:paddingLeft="5dp"
        android:drawablePadding="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:id="@+id/EditTextUpdateTime"
        android:background="@drawable/edittext_custom"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Thời Gian"
        android:drawableLeft="@drawable/icon_date"
        android:paddingLeft="5dp"
        android:textColor="@color/front"
        android:drawablePadding="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:id="@+id/EditTextUpdatePlace"
        android:background="@drawable/edittext_custom"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Địa Điểm"
        android:drawableLeft="@drawable/icon_location"
        android:paddingLeft="5dp"
        android:textColor="@color/front"
        android:drawablePadding="10dp"
        android:layout_width="350dp"
        android:layout_height="60dp"></EditText>
    <Button
        android:id="@+id/buttonUpdateSubject"
        android:background="@drawable/background_button"
        android:layout_marginTop="10dp"
        android:text="Cập Nhật"
        android:textColor="@color/text_dialog"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="60dp"></Button>

</LinearLayout>